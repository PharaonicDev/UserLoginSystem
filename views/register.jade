extends layout

block content
	.container
		h1 Register
		p please Register using the Form Below
		ul.errors
			if errors
				each error, i in errors
					li.alert.alert-danger #{error.msg}
		form(method='post', action='/users/register', enctype='multipart/form-data')
			.form-group
				label Name
				input.form-control(name='name', type='text',placeholder='Enter Name')
			.form-group
				label Email
				input.form-control(name='email', type='email',placeholder='Enter your mail')
			.form-group
				label UserName
				input.form-control(name='username', type='text',placeholder='Username')
			.form-group
				label Password
				input.form-control(name='password', type='password',placeholder='password')
			.form-group
				label Confirm passoword
				input.form-control(name='password2', type='password',placeholder='Confirm Password')
			.form-group
				label Profil Image
				input.form-control(name='profileimage', type='file')
			input.btn.btn-defult(name='submit',type='submit', value='Register')